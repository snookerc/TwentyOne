@using TwentyOne.Models;

@code
{
    [Parameter]
    public Card Card { get; set; }
}

@if (Card.IsVisible)
{
    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Card.GetImageData))" />
    <audio autoplay><source src="./Sounds/CardFlip1.mp3" /></audio>
}
else
{
    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Card.GetImageDataForBackOfCard))" />
}
